{% extends "layouts/base.njk" %}
{% block content %}
<article>
  <header>
    <h1>{{ title }}</h1>
    {% if dek %}<p class="dek">{{ dek }}</p>{% endif %}
    {% if heroImage %}
    <figure class="page-image page-image--hero">
      <img src="{{ heroImage }}" alt="{{ heroAlt or '' }}" loading="eager" decoding="async">
    </figure>
    {% endif %}
  </header>
  {{ content | safe }}
</article>
{% endblock %}
