{% extends "layouts/base.njk" %}
{% block content %}
<section class="hero">
  <h1>{{ title }}</h1>
  <p class="dek">{{ dek }}</p>
  {% if heroImage %}
  <figure class="page-image page-image--hero">
    <img src="{{ heroImage }}" alt="{{ heroAlt or '' }}" loading="eager" decoding="async">
  </figure>
  {% endif %}
</section>
{{ content | safe }}
{% endblock %}
